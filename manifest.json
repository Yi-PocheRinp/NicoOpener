{

  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "1.0",

  "homepage_url": "https://github.com/tor4kichi/NiconicoOpener",
  "applications": {
    "gecko": {
      "id": "nico-opener@tor4kichi"
    }
  },

  "permissions": [
    "http://*/*",
    "https://*/*",
    "tabs",
    "contextMenus",
    "webNavigation"
  ],

  "background": {
    "scripts": [
      "niconico.js",
       "background/ContextMenuAction.js",
       "background/NiconicoPageAction.js"
       ]
  },

  "page_action": {
    "browser_style": true,
    "default_icon": {
      "19": "button/geo-19.png",
      "38": "button/geo-38.png"
    },
    "default_title": "Nico Opener",
    "default_popup": "popup/NiconicoPageAction.html"
  },

  "default_locale": "ja"
}